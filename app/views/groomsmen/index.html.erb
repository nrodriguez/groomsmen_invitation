<p id="notice"><%= notice %></p>

<h1>Groomsmen</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groomsmen.each do |groomsman| %>
      <tr>
        <td><%= groomsman.name %></td>
        <td><%= groomsman.password %></td>
        <td><%= link_to 'Show', groomsman %></td>
        <td><%= link_to 'Edit', edit_groomsman_path(groomsman) %></td>
        <td><%= link_to 'Destroy', groomsman, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

